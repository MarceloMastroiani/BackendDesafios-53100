<div>
    <h1>Bienvenido/a</h1>
    <p>{{user.first_name}}</p>
    <p>{{user.email}}</p>
    <p>{{user.age}}</p>
     <p>ID Carrito: {{this.user.cart}}</p>
    <p>Rol: {{this.user.role}}</p>

    <a href="/api/sessions/logout"><button>Logout</button></a>
</div>

{{#if isValid}}



<h2>Listado de productos</h2>
<hr>
<div>
    {{#each docs}}
    <div>
        <ul>
            <li><span>Nombre:</span> {{this.title}}</li>
            <li> <span>Descripcion:</span> {{this.description}} </li>
            <li> <span>Codigo:</span> {{this.code}}</li>
            <li><span>Precio:</span> ${{this.price}} </li>
            <li><span>Stock:</span> {{this.stock}}</li>
            <li><span>Categoria:</span> {{this.category}}</li>
            <li><span>Brand:</span> {{this.brand}}</li>
            <li>{{this.thumbnails}}</li>
            <li><span>Estado:</span>{{this.status}}</li>
            <li><span>ID:</span>{{this._id}}</li>
            <button>Agregar al carrito</button>
        </ul>
    </div>
    <br/>
    {{/each}}
    <br>
    <hr>
</div>
<br/>
<hr>
<div>
    {{#if hasPrevPage}}
        <a href={{this.prevLink}}><< Anterior</a>
    {{/if}}
    &nbsp;
    {{this.page}}
    &nbsp;
     {{#if hasNextPage}}
        <a href={{this.nextLink}}>Siguiente >></a>
    {{/if}} 
</div>
{{else}}
<h2>No hay productos para mostrar</h2>
{{/if}}